@model NickAndArtie.Models.SlideShow

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Slideshow</h2>

<form method="post" enctype="multipart/form-data">
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SlideShow</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ImageLarge)
        </div>
        <div class="editor-field">
            <img src="@(Model.ImageLarge)" width="300px" />
            @Html.HiddenFor(model => model.ImageLarge)
            <input type="file" name="ImageLargeUpload" />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImageDestination)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ImageDestination)
            @Html.ValidationMessageFor(model => model.ImageDestination)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsListenLive)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsListenLive)
            @Html.ValidationMessageFor(model => model.IsListenLive)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
