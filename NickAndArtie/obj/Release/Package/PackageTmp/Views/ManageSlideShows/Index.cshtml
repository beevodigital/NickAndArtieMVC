@model IEnumerable<NickAndArtie.Models.SlideShow>

@{
    ViewBag.Title = "Index";
}

<h2>Slideshow Listing</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageLarge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageDestination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsListenLive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@(item.ImageLarge)" width="300px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageDestination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsListenLive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
