@model NickAndArtie.Models.PhotoReel
@using System.Web.Optimization;

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post" enctype="multipart/form-data">
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PhotoReel</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImageThumb)
        </div>
        <div class="editor-field">
            <img src="@(Model.ImageLarge)" width="300px" />
            @Html.HiddenFor(model => model.ImageThumb)
            <input type="file" name="ImageThumbUpload" />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImageLarge)
        </div>
        <div class="editor-field">
            <img src="@(Model.ImageLarge)" width="300px" />
            @Html.HiddenFor(model => model.ImageLarge)
            <input type="file" name="ImageLargeUpload" />
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
