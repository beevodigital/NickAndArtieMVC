@model IEnumerable<NickAndArtie.Models.PhotoReel>

@{
    ViewBag.Title = "Index";
}

<h2>Photo Reel Listing</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageThumb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageLarge)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            <img src="@(item.ImageThumb)" width="250px" />
        </td>
        <td>
            <img src="@(item.ImageLarge)" width="250px" />

        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
