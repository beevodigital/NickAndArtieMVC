<script type="text/javascript">
			//<![CDATA[
    $(document).ready(function () {

        new jPlayerPlaylist({
            jPlayer: "#jquery_jplayer_1",
            cssSelectorAncestor: "#jp_container_1"
        }, [
                    @{
                        foreach(var ThisItem in Model)
                        {
                            @:{
					            @:title: "@ThisItem.Title",
					            @:mp3: "@ThisItem.FileName",
                                @:free:true
					        @:},
                        }
                    }

				], {
				    swfPath: "/public/libraries/jPlayer/",
				    supplied: "mp3",
				    wmode: "window"
				});

    });
//]]>

</script>